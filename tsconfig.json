{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2018",
    "lib": ["es2018"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./",
    "outDir": "./lib/node",
    "types": [
      "node",
      "jest"
    ],
    "declaration": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "exclude": [
    "lib",
    "node_modules",
    "test/**",
    "jest.config.ts"
  ]
}
